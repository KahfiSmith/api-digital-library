{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": ["src/**/*.test.ts", "src/**/*.spec.ts", "node_modules", "dist", "logs"],
  "exec": "cross-env NODE_OPTIONS=--max-old-space-size=512 tsx --tsconfig tsconfig.json src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false,
  "verbose": false
}
