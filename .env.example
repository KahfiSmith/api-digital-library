# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=digital_library
DB_USER=your_username
DB_PASSWORD=your_password

# Prisma Database URL (primary connection)
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/digital_library

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
HELMET_CSP=true
TRUST_PROXY=false

# Auth Cookie Settings (for cross-site auth)
# Options: 'lax' (default), 'strict', 'none'.
# Note: 'none' requires HTTPS and will force Secure cookies.
AUTH_COOKIE_SAMESITE=lax
# if not set, defaults to NODE_ENV === 'production'
AUTH_COOKIE_SECURE=
# Optional cookie domain, e.g. .example.com
AUTH_COOKIE_DOMAIN=
# Optional cookie path (default '/')
AUTH_COOKIE_PATH=

# App URL (for email links)
APP_BASE_URL=http://localhost:3001

# SMTP (for sending emails)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_FROM="Digital Library <no-reply@digitallibrary.local>"
